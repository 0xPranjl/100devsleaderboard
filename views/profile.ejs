<%- include('partials/header') -%>
<script defer src="/js/main.js"></script>

<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
      <h2 class="text-center">placeholder: <%=Math.floor(stat?.time)%> seconds</h2>
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold lh-1 mb-3">Welcome back <%=user.userName[0].toUpperCase() + user.userName.substr(1)%>! You've studied a total of <%=Math.floor(stat?.time / 60)%> minutes.</h1>
      <p class="lead">Initialize your time statistic by clicking on create. Once your stat has been created, simply use the start/stop buttons to record your study progress. Remember to take regular breaks!</p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <form
        action="/stat/createStat"
        method="POST"
        >
          <button class="btn btn-primary btn-lg px-4 me-md-2" type="submit">Create</button>
        </form>
        <button id="start" class="btn btn-primary btn-lg px-4 me-md-2">Start</button>
        <button id="stop" class="btn btn-outline-secondary btn-lg px-4">Stop</button>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <table class="table">
      <tr>
        <th>#</th>  
        <th>Name</th>
        <th>Hours</th>
        <th>Minutes</th>
      </tr>
      <% for(var i=0; i<statList.length; i++) {%>
          <tr>
              <th scope="row"><%=i + 1%></th>
              <th><%=statList[i].userName%></th>
              <th><%=Math.floor(statList[i].time / 3600)%></th>
              <th><%=Math.floor(statList[i].time / 60)%></th>
          </tr>
      <% } %>
    </table>
</div>

<%- include('partials/footer') -%>