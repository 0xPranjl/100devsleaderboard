<%- include('partials/header') -%>
<script defer src="/js/main.js"></script>
<div class="container">
  <div class="row mt-5">

      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
      </div>
      
      <form
      class="col-1"
      action="/stat/createStat"
      method="POST"
      >
        <button type="submit">create stat</button>
      </form>

      <% if (stat?.time == 'NaN') {%>
         <span>Hello!</span>
      <%} else {%>
        <span><%= Math.floor(stat?.time / 60)%> minutes studied!</span>
        <%}%>

      <span>
        <%=stat?.time%>
      </span>

    </div>
  </div>
</div>

<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
      <h2 class="text-center">timer here</h2>
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold lh-1 mb-3">Welcome back <%=user.userName[0].toUpperCase() + user.userName.substr(1)%>! You've studied a total of <%=Math.floor(stat?.time / 60)%> minutes.</h1>
